{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2020",
        "module": "es2020",
        "jsx": "react-jsx",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "typeRoots": ["./@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "ES2020"]
    }
}
