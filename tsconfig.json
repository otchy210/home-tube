{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2015",
        "module": "ES2015",
        "jsx": "react",
        "moduleResolution": "node",
        "strict": true,
        "pretty": true,
        "newLine": "lf",
        "outDir": "dist",
        "lib": ["ES2020", "DOM"],
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
